<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.MyWather" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary_dark</item>
        <item name="colorPrimaryVariant">@color/primary_variant_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/accent_dark</item>
        <item name="colorSecondaryVariant">@color/accent_dark</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Custom attributes -->
        <item name="buttonBackgroundTint">@color/white</item>
        <item name="buttonTextColor">@color/black</item>

        <!-- Background colors -->
        <item name="android:windowBackground">@color/background_dark</item>
        <item name="backgroundColor">@color/background_dark</item>

        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_primary_dark</item>
        <item name="android:textColorSecondary">@color/text_secondary_dark</item>

        <!-- Control colors -->
        <item name="colorControlNormal">@color/white</item>
    </style>
</resources>